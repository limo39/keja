[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    migrations,
    env,
    venv,
    .venv,
    node_modules,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.log,
    .pytest_cache,
    .mypy_cache

ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator

per-file-ignores =
    __init__.py:F401
    settings.py:E501
    */migrations/*:E501,F401